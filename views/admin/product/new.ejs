<div class="title">
	<h2 class="form-signin-heading">Add product</h2>
</div>
<br/>

<form action="/admin/product/create" method="POST" class="form-signin">

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<ul id="productTab" class="nav nav-tabs">
				<li class="active">
					<a href="#basicInfo" data-toggle="tab">Basic Info</a>
				</li>
			</ul>

			<div id="productTabContent" class="tab-content">

				<div class="tab-pane fade active in" id="basicInfo">
					<br/>

					<div class="form-group col-sm-12">
						<label for="email">Name:</label>
						<input id="email" type="email" class="form-control" placeholder="Product Name" name="name" />
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label for="shortDescription">Short Description:</label>
						<input id="shortDescription" type="text" class="form-control" placeholder="Short Description" name="shortDescription" />
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label for="longDescription">Long Description:</label>
						<input id="longDescription" type="text" class="form-control" placeholder="Long Description" name="longDescription" />
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label for="price">Price:</label>
						<input id="price" type="password" class="form-control" placeholder="Price" name="price" />
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label for="nutritionDetails">Nutrition Details:</label>
						<input id="nutritionDetails" type="password" class="form-control" placeholder="Nutrition Details" name="nutritionDetails" />
					</div>

                    <div class="form-group col-md-6 col-sm-6">
                        <label for="manufacturer">Place of birth:</label>
                        <input id="manufacturer" type="text" class="form-control" placeholder="Origin" name="manufacturer" />
                    </div>

					<div class="form-group col-md-6 col-sm-6">
						<label for="expirationDate">Expiration Date:</label>
						<input id="expirationDate" type="date" class="form-control" placeholder="Expiration Date (format: (YYYY-mm-dd)" name="expirationDate" />
					</div>

				</div>

			</div>
			<br/>
			<br/>

			<div class="form-group col-md-12 col-sm-12">
				<input type="submit" class="btn btn-sm btn-success" value="Create product" />
				<%- link_to_if(true, "Back", "/admin/product/index", {class: "btn btn-sm btn-primary"}) %>
			</div>
		</div>
	</div>
	<input id="csrf" type="hidden" name="_csrf" value="<%= _csrf %>" />

</form>
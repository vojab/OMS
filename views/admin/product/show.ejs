<div class="title">
	<h2 class="form-signin-heading">Product :: <strong><%= product.name %></strong></h2>
</div>

<br/>
<br/>
<br/>

<form action="/admin/product" method="GET" class="form-signin">

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<ul id="productTab" class="nav nav-tabs">
				<li class="active">
					<a href="#basicInfo" data-toggle="tab">Basic Info</a>
				</li>
			</ul>

			<div id="productTabContent" class="tab-content">

				<div class="tab-pane fade active in" id="basicInfo">
					<br/>

					<div class="form-group col-sm-12">
						<label>Name:</label>
						<%= product.name %>
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label>Short Description:</label>
						<%= product.shortDescription %>
					</div>

					<div class="form-group col-md-6 col-sm-6">
						<label>Long Description:</label>
						<%= product.longDescription %>
					</div>

                    <div class="form-group col-md-6 col-sm-6">
                        <label>Price:</label>
                        <%= product.price %>
                    </div>

                    <div class="form-group col-md-6 col-sm-6">
                        <label>Nutrition Details:</label>
                        <%= product.nutritionDetails %>
                    </div>

                    <div class="form-group col-md-6 col-sm-6">
                        <label>Manufacturer:</label>
                        <%= product.manufacturer %>
                    </div>

					<div class="form-group col-md-6 col-sm-6">
						<label>Expiration Date:</label>
						<%- product.expirationDate == "" ? "" : date_tag("expirationDate", new Date(product.expirationDate)) %>
					</div>

				</div>

			</div>
			<br/>
			<br/>

			<div class="form-group col-md-12 col-sm-12">
				<%- link_to_if(true, "Back", "/admin/product/index", {class: "btn btn-sm btn-primary"}) %>
			</div>
		</div>
	</div>
	<input id="csrf" type="hidden" name="_csrf" value="<%= _csrf %>" />

</form>
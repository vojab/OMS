
<div class="page-header">
	<h2 style="padding-left: 2em;">Countries</h2>
</div>

<% if (countries.length > 0) {%>
<div class="container">
	<div class="row">
		<div class="col-md-8 table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% countries.forEach(function(country){ %>
					<tr>
						<td><%- country.countryName %></td>						
						<td>
							<%- link_to_if(true,"Edit", "/countries/" + country.id + "/edit", {class: "btn btn-sm btn-warning"}) %>
							<a id="deleteCountry" data-member=<%=country.id %> class="btn btn-sm btn-danger">Delete</a>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
	</div>
	<input id="csrf" type="hidden" name="_csrf" value="<%= _csrf %>" />
</div>
<% } else { %>
<br/>
<div class="container">
	<div class="row">
		<%- link_to_if(true, "Add country", "/countries/new", {class: "btn btn-sm btn-success"}) %>
	</div>
</div>
<% } %>

<div class="title">
	<h2 class="form-signin-heading">Edit country :: <strong><%= country.countryName %></strong></h2>
</div>
<br/>

<form action="/countries/update" method="POST" class="country-form">

	<div clas="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="form-group col-sm-6">
				<label for="countryName">Name:</label>
				<%- text_field_tag("countryName", country.countryName, {class:"form-control", name:"countryName"}) %>
			</div>
			<div class="form-group col-md-12 col-sm-12">
				<input type="submit" class="btn btn-sm btn-success" value="Update country" />
				<%- link_to_if(true, "Back", "/countries/index", {class: "btn btn-sm btn-primary"}) %>
			</div>

		</div>
	</div>

	<input id="csrf" type="hidden" name="_csrf" value="<%= _csrf %>" />
	<%- hidden_field_tag("country_id", country.id) %>

</form>
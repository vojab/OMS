<div class="title">
	<h2 class="form-signin-heading">Edit city :: <strong><%= city.cityName %></strong></h2>
</div>
<br/>

<form action="/cities/update" method="POST" class="form-signin">

	<div clas="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="form-group col-sm-6">
				<label for="cityName">Name:</label>
				<%- text_field_tag("cityName", city.cityName, {class:"form-control", placeholder:"Email", name:"cityName"}) %>
			</div>
			<div class="form-group col-md-12 col-sm-12">
				<input type="submit" class="btn btn-sm btn-success" value="Update city" />
				<%- link_to_if(true, "Back", "/cities/index", {class: "btn btn-sm btn-primary"}) %>
			</div>

		</div>
	</div>

	<input id="csrf" type="hidden" name="_csrf" value="<%= _csrf %>" />
	<%- hidden_field_tag("city_id", city.id) %>

</form>